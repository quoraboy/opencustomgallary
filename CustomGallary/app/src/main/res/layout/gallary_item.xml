<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_beside_text"
        android:layout_width="128dp"
        android:layout_height="128dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="gallary image"
        android:hint="Folder name"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_beside_text"
        app:layout_constraintEnd_toEndOf="@+id/image_beside_text"
        app:layout_constraintStart_toStartOf="@+id/image_beside_text"
        tools:ignore="MissingConstraints"
        android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>