<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insidefolderrecycler">

    <TextView
        android:id="@+id/gallary_number_inside_folder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="number of images"
        app:layout_constraintBottom_toTopOf="@+id/Recycler_gallary_image_inside_folder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler_gallary_image_inside_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/gallary_number_inside_folder"/>
</androidx.constraintlayout.widget.ConstraintLayout>